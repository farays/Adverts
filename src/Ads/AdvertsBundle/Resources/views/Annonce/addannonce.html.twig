{% extends "@AdsAdverts/layout/base.html.twig" %}
{% block header %}
    {% include '@AdsAdverts/layout/inc/header.html.twig' %}
{% endblock %}
{% block body %}

    {#{{ form_start(form) }}
        {{ form_label(form.idcategorie, 'Categorie') }}
        {{ form_widget(form.idcategorie) }}
    {{ form_end(form) }}#}

<div class="row" style="margin-top: 20px">
    <div class="col-md-10 offset-1">

        <div class="modal-content">


            <div class="modal-header primary-color white-text justify-content-center">
                <h4 class="title">
                    <i class="fa fa-pencil"></i>Publier une nouvelle annonce</h4>
            </div>

            <div class="modal-body col-md-10 offset-1">
                {{ form_start(form, {'method': 'post', 'action': path('newannonce'), 'attr': {'class': 'newannonce'}}) }}

                <div class="md-form form-sm">
                    {{ form_widget(form.titre,{attr:{"class":"form-control form-control-sm"}}) }}
                    {{ form_label(form.titre, 'Titre de l\'annonce', {label_attr:{"class":"font-weight-bold"}}) }}
                    {{ form_errors(form.titre) }}
                </div>


                <div class="md-form form-sm">
                    {{ form_widget(form.description,{attr:{"class":"form-control md-textarea"}}) }}
                    {{ form_label(form.description, 'Description de votre annonce', {label_attr:{"class":"font-weight-bold"}}) }}
                    {{ form_errors(form.description) }}
                </div><br>


                <div class="md-form form-sm">
                    {{ form_widget(form.idcategorie,{attr:{"class":"form-control form-control-sm"}}) }}
                    {{ form_errors(form.idcategorie) }}
                </div>
                <div class="md-form form-sm">
                    {{ form_widget(form.prix,{attr:{"class":"form-control form-control-sm"}}) }}
                    {{ form_label(form.prix,'Prix', {label_attr:{"class":"font-weight-bold"}}) }}
                    {{ form_errors(form.prix) }}
                </div><br>

                <div class="form-group">
                    {{ form_label(form.file,'Une photo pour votre annonce', {label_attr:{"class":"font-weight-bold"}}) }}
<br>
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}

                </div><br><br>

                <p class="help-block">N'y mettez pas une photo qui ne correspond pas à l'annonce.
                    Laissez un champs vide ou saisir 0 s'il n'y a pas de prix</p>

                <div class="text-center mt-4 mb-2">
                    {{ form_widget(form.publier,{attr:{"class":"btn btn-primary rondeur fa fa-send ml-2"}}) }}

                   {# <button class="btn btn-primary rondeur">Publier er
                        <i class="fa fa-send ml-2"></i>
                    </button>#}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
    {% endblock body %}